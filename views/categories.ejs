<script>
    $(document).ready(function () {
        $('#statusContainer').hide()
        // Event listener for dropdown items
        $('.deleteButton a').on('click', function () {
            // Get the text of the clicked item
            var selectedText = $(this).text();
            var selectedId = $(this).attr('id');
            // Update the dropdown button text
            $('#deleteButton').text(selectedText);
            // Update the dropdown button data-id attribute
            $('#categoryId').val(selectedId);

            fetch('/get-category-status?categoryId=' + selectedId)
                    .then(response => response.json())
                    .then(data => {
                        console.log(data);
                        if (data.category.category_status === true) {
                            $('#toggleStatus').bootstrapToggle('on');
                        } else {
                            $('#toggleStatus').bootstrapToggle('off');
                        }
                        document.getElementById('statusContainer').style.display = 'block';
                        $('#toggleStatus').change(function () {
                            var status = $(this).prop('checked');
                            var categoryId = $('#itemId').val();

                            if (itemId === "") {
                                alert('Please select a Category to update');
                                return;
                            }
                            fetch('/update-category-status', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ categoryId: categoryId, status: status }),
                            }).then(response => response.json())
                                .then(data => {
                                    console.log('Success:', data);
                                }).catch((error) => {
                                    alert('Failed, please try again')
                                    console.error('Error:', error);
                                });
                        });
                    }).catch(error => {
                        console.error('Error fetching item status:', error);
                    });
        });

        $('.addCategory a').on('click', function () {
            // Get the text of the clicked item
            var selectedText = $(this).text();
            var selectedId = $(this).attr('id');
            // Update the dropdown button text
            $('#addCategory').text(selectedText);
            // Update the dropdown button data-id attribute
            $('#menuId').val(selectedId);
        });

        $('.orderCategory a').on('click', function () {
            
            // Get the text of the clicked item
            var selectedText = $(this).text();
            var selectedId = $(this).attr('id');
            // Update the dropdown button text
            $('#orderCategory').text(selectedText);
            // Update the dropdown button data-id attribute
            $('#orderCategory').attr('data-id', selectedId);

            // Fetch the categories for the selected menu
            fetch('/get-categories?menuId=' + selectedId)
            .then(response => response.json())
            .then(data => {
                var sortableList = $('#sortable');
                sortableList.empty(); // Clear the existing list

                // Populate the sortable list with fetched categories
                data.categories.forEach(function(category) {
                    var listItem = $('<li></li>')
                        .attr('data-id', category.category_id)
                        .text(category.category_name);
                    sortableList.append(listItem);
                });
                
                // Re-initialize sortable after dynamically adding items
                $("#sortable").sortable("refresh");
            }).catch(error => {
                alert('something went wrong!, please try again.');
                console.error('Error fetching categories:', error);
            });
        });

        $("#sortable").sortable({
            update: function (event, ui) {
                var sortedIDs = $("#sortable").sortable("toArray", { attribute: "data-id" });
                console.log(sortedIDs);
                // Send sortedIDs to your backend to update the priority/order
                // Example using fetch API:
                fetch('/reorder-categories', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ order: sortedIDs }),
                }).then(response => response.json())
                    .then(data => {
                        console.log('Success:', data);
                    }).catch((error) => {
                        console.error('Error:', error);
                    });
            }
        });
        $("#sortable").disableSelection();

         $('form[action="/add-category"]').on('submit', function (e) {
            if ($('#menuId').val() === "") {
                e.preventDefault();
                alert('Please Select a menu');
            }
        });
        $('form[action="/deletecategory"]').on('submit', function (e) {
            if ($('#categoryId').val() === "") {
                e.preventDefault();
                alert('Please Select an Category to delete');
            }
        });

            // Show modal when Update button is clicked
        $('#updateButton').on('click', function (e) {
            // Check if a category is selected
            var selectedCategoryName = $('#deleteButton').text();
            var selectedCategoryId = $('#categoryId').val();
            if (selectedCategoryId === "") {
                alert('Please Select a Category to update');
            } else {
                // Set the selected category name in the modal input
                $('#newCategoryName').val(selectedCategoryName);
                $('#updateCategoryId').val(selectedCategoryId);
                $('#updateModal').modal('show');
            }
        });

            // Handle the confirmation of the update
        $('#confirmUpdateButton').on('click', function () {
            var newCategoryName = $('#newCategoryName').val();
            var categoryId = $('#updateCategoryId').val();
            // Send the updated category name to your backend
            fetch('/update-category', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ categoryId: categoryId, newCategoryName: newCategoryName })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Category updated successfully!');
                    form.reset();
                } else {
                    alert('Failed to update category.');
                }
                $('#updateModal').modal('hide');
            }).catch((error) => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
                $('#updateModal').modal('hide');
            });
        });
    });
</script>

